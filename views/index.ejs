<!DOCTYPE html>
<html lang="et">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= firstName %> <%= lastName %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1><%= firstName %> <%= lastName %> <span class="created">Created in 2025</span></h1>

      <div class="kontaktinfo">
        <div class="block vasak">
          <div class="pealkiri">Professional Employee</div>
          <div class="info-rida"><div class="label">Phone:</div><div class="value"><%= phone %></div></div>
          <div class="info-rida"><div class="label">Email:</div><div class="value"><%= email %></div></div>
          <div class="info-rida"><div class="label">Web:</div><div class="value"><%= web %></div></div>
        </div>

        <div class="block parem">
          <div class="pealkiri">Address</div>
          <div class="info-rida"><div class="label">Line 1:</div><div class="value"><%= addressLine1 %></div></div>
          <div class="info-rida"><div class="label">Line 2:</div><div class="value"><%= addressLine2 %></div></div>
          <div class="info-rida"><div class="label">Zip:</div><div class="value"><%= zip %></div></div>
        </div>
      </div>
    </header>

    <section class="haridus">
      <h2>Hariduskäik</h2>
      <% education.forEach(item => { %>
        <div class="list">
          <div class="year"><%= item.year %></div>
          <div class="text"><%= item.text %></div>
        </div>
      <% }) %>
    </section>

    <section class="kogemused">
      <h2>Töökogemus</h2>
      <% work.forEach(item => { %>
        <div class="list">
          <div class="year"><%= item.year %></div>
          <div class="text"><%= item.text %></div>
        </div>
      <% }) %>
    </section>

    <section class="skills-references-pic">
      <div class="pic">
        <img src="/profiilipilt.jpg" alt="Profiilipilt" />
      </div>
      <div class="skills">
        <h2>Skills</h2>
        <ul>
          <% skills.forEach(skill => { %>
            <li><%= skill %></li>
          <% }) %>
        </ul>
      </div>
      <div class="references">
        <h2>Reference</h2>
        <p>Name: <%= reference.name %></p>
        <p>Position: <%= reference.position %></p>
        <p>Company: <%= reference.company %></p>
        <p>Email: <%= reference.email %></p>
      </div>
    </section>

    <footer>
      <p>instagram: <%= instagram %> &nbsp;&nbsp; linkedin: <%= linkedin %></p>
    </footer>
  </div>
</body>
</html>
